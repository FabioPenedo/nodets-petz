{{>partials/header}}
{{#banner}}
    <section class="banner" style="background-image: url('images/{{ background }}')"></section>
    <h2>{{ title }} disponíveis para adoção</h2>
{{/banner}}

<div class="container list">
    {{#list}}
        <div class="item">
            <img src="images/{{ image }}" class="item--image" />
            <div class="item--dice">
                <div class="item--name">{{ name }}</div>
                {{#life_expectancy}}
                    <div class="item--lifeexpectancy">Expectativa de Vida: <span>{{ life_expectancy }}</span></div>
                {{/life_expectancy}}
                {{^life_expectancy}}
                    <div class="item--lifeexpectancy">Expectativa de Vida: <span>?</span></div>
                {{/life_expectancy}}
                {{#height_average}}
                    <div class="item--heightaverage">Média de Altura: <span>{{ height_average }}</span></div>
                {{/height_average}}
                {{^height_average}}
                    <div class="item--heightaverage">Média de Altura: <span>?</span></div>
                {{/height_average}}
                {{#average_weight}}
                    <div class="item--averageweight">Média de Peso: <span>{{ average_weight }}</span></div>
                {{/average_weight}}
                {{^average_weight}}
                    <div class="item--averageweight">Média de Peso: <span>?</span></div>
                {{/average_weight}}
            </div>
        </div>
    {{/list}}
</div>
{{^list}}
    <div class="container no-list">
        <h2>Não existe esse tipo de pet nas listas.</h2>
    </div>
{{/list}}

{{>partials/footer}}

